<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_bg"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.employee_app.manage_ad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar3"
            />

</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:text="Advertisement Composer"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="60dp"/>

        </LinearLayout>

        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/title"
            android:maxLength="25"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:hint="Job Tilte"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="35"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:hint="Job SubTilte"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="text"
            tools:ignore="LabelFor" />
        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/salary"
            android:textColor="@color/black"
            android:focusableInTouchMode="false"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:hint="Salary"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/phone"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:maxLength="16"
            android:hint="Phone Number"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="phone"
            tools:ignore="LabelFor" />
        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/mailaddress"
            android:maxLength="25"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:hint="Email address"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="textEmailAddress"
            tools:ignore="LabelFor" />

        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/address"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Address-location"
            android:maxLength="40"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <EditText
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bg1"
            android:id="@+id/details"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:hint="Details"
            android:textColorHint="@color/gradstart"
            android:paddingLeft="20dp"
            android:maxLength="200"
            android:inputType="textMultiLine"
            tools:ignore="LabelFor"
            android:lines="3"/>

        <com.google.android.material.button.MaterialButton
            android:text="Submit Ad"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/submit"

            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            app:backgroundTint="@color/white"
            />



    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>