<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gradstart"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:id="@+id/profilename"
        android:gravity="center"
        android:text="Profile viewer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:paddingBottom="20dp"
       android:background="@color/gradstart"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="12dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="40dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/ers"
                android:scaleType="fitCenter"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="test"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gradstart"
            android:id="@+id/aboutprofile"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <TableRow
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/gradstart"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
         android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/phone_profile"
            android:textColor="@color/black"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nothing to show"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gradstart"
            android:id="@+id/phoneprofile"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/mail_profile"
            android:textColor="@color/black"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nothing to show"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gradstart"
            android:id="@+id/emailprofile"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/web_profile"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nothing to show"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gradstart"
            android:id="@+id/websiteprofile"
            />
    </LinearLayout>






    </LinearLayout>



