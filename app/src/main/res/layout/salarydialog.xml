<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="240dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="6dp"
    android:orientation="vertical"
    android:background="@color/gradstart">




    <TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    android:text="Input salary range"
    android:textSize="18sp"/>

    <EditText
        android:id="@+id/salarymin"
        tools:ignore="LabelFor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_bg1"
        android:backgroundTint="@color/white"
        android:hint="Minimum Salary"
        android:inputType="number"
        android:maxLength="8"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gradstart" />
    <EditText
        android:id="@+id/salarymax"
        tools:ignore="LabelFor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_bg1"
        android:backgroundTint="@color/white"
        android:hint="Maximum Salary"
        android:inputType="number"
        android:maxLength="8"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gradstart" />

    <Button
        android:id="@+id/submitSalary"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:text="Select"

        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/white" />
</LinearLayout>